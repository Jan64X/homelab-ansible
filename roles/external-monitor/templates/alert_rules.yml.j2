groups:
  - name: homelab_availability
    interval: 30s
    rules:
      - alert: HomelabUnreachable
        expr: probe_success{job="blackbox_homelab"} == 0
        for: 2m
        labels:
          severity: critical
          service: prometheus
          env: homelab
        annotations:
          summary: "Homelab is UNREACHABLE"
          description: "The Blackbox exporter failed to probe homelab prometheus. The home network appears to be down."