server {
    listen 443 ssl;
    server_name {{ services.forgejo.domain }};
    client_max_body_size 512M;

    ssl_certificate /etc/letsencrypt/live/{{ base_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ base_domain }}/privkey.pem;
    
    # Mozilla Intermediate Configuration (Current Best Practice)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 1.1.1.1 1.0.0.1 valid=300s;
    resolver_timeout 5s;

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    access_log /srv/nginx/logs/forgejo.access.log main;

    # Forgejo handles its own Gzip usually, safe to turn off Nginx's
    gzip off;

    location / {
        proxy_pass {{ services.forgejo.backend_server }};
        
        # --- CRITICAL ---
        proxy_http_version 1.1;
        proxy_buffering off; # Git pushes/pulls can be large, buffering hurts latency

        # --- HEADERS ---
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # --- WEBSOCKETS ---
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Timeouts (Git pushes can take time)
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
    }
}