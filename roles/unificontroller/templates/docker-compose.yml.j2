services:
  unifi-db:
    image: docker.io/mongo:4.4
    container_name: unifi-db
    restart: unless-stopped
    environment:
      - MONGO_INITDB_ROOT_USERNAME=root
      - MONGO_INITDB_ROOT_PASSWORD={{ mongo_root_password }}
      - MONGO_USER=unifi
      - MONGO_PASS={{ mongo_unifi_password }}
      - MONGO_DBNAME=unifi
      - MONGO_AUTHSOURCE=admin
    volumes:
      - /var/lib/mongodb:/data/db
      - /etc/unifi/db-init/init-mongo.sh:/docker-entrypoint-initdb.d/init-mongo.sh:ro
    ports:
      - "127.0.0.1:27017:27017"  # Only expose to localhost
    healthcheck:
      test: echo 'db.runCommand("ping").ok' | mongo localhost:27017/test --quiet
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  unifi-network-application:
    image: lscr.io/linuxserver/unifi-network-application:latest
    container_name: unifi-network-application
    restart: unless-stopped
    network_mode: host  # Host networking mode
    environment:
      - PUID=999
      - PGID=999
      - TZ=Europe/Prague
      - MONGO_USER=unifi
      - MONGO_PASS={{ mongo_unifi_password }}
      - MONGO_HOST=127.0.0.1  # Connect to host's localhost
      - MONGO_PORT=27017
      - MONGO_DBNAME=unifi
      - MONGO_AUTHSOURCE=admin
      - MEM_LIMIT=1024
      - MEM_STARTUP=1024
    volumes:
      - /var/lib/unifi:/config
    depends_on:
      unifi-db:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "https://localhost:8443/status", "--insecure"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s