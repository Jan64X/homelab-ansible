---
# System Configuration
# Change this to your preferred username on managed systems
system_user: sysadmin
system_user_groups:
  - wheel
  - ssh

# Ansible automation user (used by Ansible to connect and manage systems)
ansible_user: ansible
ansible_user_groups: 
  - ssh

# SSH Configuration
ssh_port: 22

# Ansible User SSH Key (same for all hosts)
ansible_ssh_public_key: "{{ lookup('file', playbook_dir + '/credentials/ssh_keys/ansible_admin.pub') }}"

# Home public IP for VPS prometheus exporter firewall whitelist
# Replace with your actual home/office IP
home_public_ip: "203.0.113.1"

# Grafana SMTP Configuration
grafana_smtp_enabled: false
grafana_smtp_host: "smtp.example.com:465"
grafana_smtp_user: "myuser"
grafana_smtp_password: "mysecret"
grafana_smtp_from_address: "grafana@example.com"
grafana_smtp_from_name: "Grafana"
grafana_smtp_skip_verify: false

# External monitor SMTP configuration
external_monitor_smtp_host: "smtp.example.com:587" # Alert Manager requires starttls on port 587 and doesn't cooperate with SMTPS on 465
external_monitor_smtp_user: "externalmonitor@example.com"
external_monitor_smtp_password: "mysecret"
external_monitor_smtp_from_address: "externalmonitor@example.com"
external_monitor_smtp_from_name: "External Monitor"
external_monitor_smtp_skip_verify: false
external_monitor_alert_email: "destination@example.com"
